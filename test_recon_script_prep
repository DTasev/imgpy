from configs import recon_config
c = recon_config.ReconstructionConfig.empty_init()
 
c.helper=Helper(c)
c.func.in_format = 'tiff'
c.func.out_format = 'tiff'
c.func.input_path='~/temp/chadwick_cors/'
from imgdata import loader, copy
img = loader.load_data(c)[0] # we only want the sample
imgcopy = copy.copy(img[440:460])
import tomopy.misc.corr as tmc
ringed = tmc.remove_ring(imgcopy, 580, 555, 600, 400, 200, 40, 20, 8)

from imopr import visualiser as vis
vis.show_3d(ringed)